<Page x:Class="PointOfSale.CustomizeBronto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeBronto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <WrapPanel>
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="200 "></Setter>
                    <Setter Property="Height" Value="100"></Setter>
                </Style>
            </WrapPanel.Resources>
            <Button Click="Click_HBun">Hold Bun</Button>
            <Button Click="Click_HPeppers">Hold Peppers</Button>
            <Button Click="Click_HOnion">Hold Onion</Button>
        </WrapPanel>
        <Button Grid.Row="1" Click="Click_Back">Back</Button>
    </Grid>
</Page>
