<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuCategorySelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="SelectCombo" Grid.Column="0" Grid.Row="0" >Combo</Button>
        <Button Click="SelectEntrees" Grid.Column="1" Grid.Row="0">Entrees</Button>
        <Button Click="SelectSides" Grid.Column="0" Grid.Row="1">Sides</Button>
        <Button Click="SelectDrinks" Grid.Column="1" Grid.Row="1">Drinks</Button>
    </Grid>
</Page>
